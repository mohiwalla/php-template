{
	"name": "@mohiwalla/php",
	"version": "1.0.1",
	"bin": {
		"php-init": "./bin/init"
	},
	"description": "A PHP template with Tailwind.CSS and routing system",
	"main": "tailwind.config.js",
	"scripts": {
		"build": "tailwindcss -i ./public/css/input.css -o ./public/css/style.css --minify",
		"start": "npm run build && npm run dev",
		"dev": "php -S localhost:8000",
		"css": "tailwindcss -i ./public/css/input.css -o ./public/css/style.css --watch"
	},
	"keywords": [
		"php",
		"nextjs",
		"next.js",
		"php js",
		"php npm",
		"mohiwalla",
		"php-next.js",
		"next.js-php",
		"php-nextjs",
		"nextjs-php",
		"php routing",
		"php project",
		"php tailwind",
		"php tailwindcss",
		"php boilterplate",
		"zx",
		"php-cli",
		"php-project",
		"php-template",
		"php-tailwindcss",
		"php-npm",
		"php-node",
		"php-package"
	],
	"author": "mohiwalla",
	"license": "MIT",
	"devDependencies": {
		"autoprefixer": "^10.4.20",
		"postcss": "^8.5.1",
		"tailwindcss": "^4.0.4"
	}
}
